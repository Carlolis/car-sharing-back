<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{HH:mm:ss.SSS} %logger{40} %m %n</Pattern>
            </layout>
        </encoder>
    </appender>


    <!-- Set DEBUG level for Tapir HTTP request logging -->
    <logger name="sttp.tapir.server.interceptor.log.DefaultServerLog" level="DEBUG"/>
    <logger name="sttp.tapir" level="DEBUG"/>
    
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>
